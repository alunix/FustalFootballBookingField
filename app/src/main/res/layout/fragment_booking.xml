<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/layoutBooking"
    android:background="@drawable/bgblur"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <android.support.v4.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fitsSystemWindows="true"
        app:layout_scrollFlags="scroll|exitUntilCollapsed"
        >

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:background="#52a9f5"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="45dp">
            <TextView
                android:id="@+id/title"
                android:gravity="center"
                android:textColor="#fff"
                android:textStyle="bold"
                android:textSize="18sp"
                android:text="Information For Booking"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />

        </LinearLayout>

    <!--<android.support.v7.widget.CardView-->
        <!--xmlns:card_view="http://schemas.android.com/apk/res-auto"-->
        <!--android:layout_marginLeft="3dp"-->
        <!--android:layout_marginRight="3dp"-->
        <!--android:layout_marginTop="10dp"-->
        <!--card_view:cardCornerRadius="5dp"-->
        <!--android:layout_width="match_parent"-->
        <!--android:layout_height="wrap_content">-->

    <LinearLayout
        android:layout_marginRight="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="0dp"
        android:background="#50ffffff"
        android:layout_marginBottom="20dp"
        android:padding="3dp"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <LinearLayout

            android:layout_marginTop="20dp"
            android:paddingLeft="5dp"
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <TextView
                android:textStyle="bold"
                android:textSize="14sp"
                android:textColor="#000"
                android:text="Name:"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <TextView
                android:textStyle="bold"
                android:layout_marginTop="25dp"
                android:textSize="14sp"
                android:textColor="#000"
                android:text="Phone Number:"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />


            <TextView
                android:textStyle="bold"
                android:layout_marginTop="25dp"
                android:textSize="14sp"
                android:textColor="#000"
                android:text="Email:"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <TextView
                android:textStyle="bold"
                android:layout_marginTop="25dp"
                android:textSize="14sp"
                android:textColor="#000"
                android:text="Type Field:"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <TextView
                android:textStyle="bold"
                android:layout_marginTop="25dp"
                android:textSize="14sp"
                android:textColor="#000"
                android:text="Day Booking:"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <TextView
                android:textStyle="bold"
                android:layout_marginTop="25dp"
                android:textSize="14sp"
                android:textColor="#000"
                android:text="Time Booking:"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />


        </LinearLayout>

        <LinearLayout
            android:layout_marginTop="10dp"
            android:paddingRight="10dp"
            android:layout_marginLeft="3dp"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <EditText
                android:textStyle="bold"
                android:focusable="true"
                android:singleLine="true"
                android:textColor="#000"
                android:textColorHint="#878787"
                android:hint="Name"
                android:layout_marginTop="-1dp"
                android:theme="@style/MyEditTextTheme"
                android:textSize="14sp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
            <EditText
                android:textStyle="bold"
                android:singleLine="true"
                android:theme="@style/MyEditTextTheme"
                android:textColor="#000"
                android:textColorHint="#878787"
                android:hint="Phone Number"
                android:layout_marginTop="5dp"
                android:textSize="14sp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
            <EditText
                android:textStyle="bold"
                android:textColor="#000"
                android:textColorHint="#878787"
                android:singleLine="true"
                android:theme="@style/MyEditTextTheme"
                android:hint="Email"
                android:layout_marginTop="3dp"
                android:textSize="14sp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <TextView
                        android:textStyle="bold"
                        android:singleLine="true"
                        android:id="@+id/txtfield"
                        android:theme="@style/MyEditTextTheme"
                        android:textColor="#000"
                        android:textColorHint="#42454b"
                        android:hint="Type Field"
                        android:layout_marginTop="15dp"
                        android:textSize="14sp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" />
                    <View
                        android:background="@color/textBtnReg"
                        android:layout_marginTop="3dp"
                        android:layout_width="match_parent"
                        android:layout_height="1dp"/>
                </LinearLayout>



                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <TextView
                        android:textStyle="bold"
                        android:singleLine="true"
                        android:id="@+id/txtday"
                        android:theme="@style/MyEditTextTheme"
                        android:textColor="#000"
                        android:textColorHint="#42454b"
                        android:hint="Select Day"
                        android:layout_marginTop="22dp"
                        android:textSize="14sp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" />
                    <View
                        android:background="@color/textBtnReg"
                        android:layout_marginTop="3dp"
                        android:layout_width="match_parent"
                        android:layout_height="1dp"/>
                    <TextView
                        android:textStyle="bold"
                        android:singleLine="true"
                        android:id="@+id/txttime"
                        android:theme="@style/MyEditTextTheme"
                        android:textColor="#000"
                        android:textColorHint="#42454b"
                        android:hint="Select Time"
                        android:layout_marginTop="21dp"
                        android:textSize="14sp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" />
                    <View
                        android:background="@color/textBtnReg"
                        android:layout_marginTop="3dp"
                        android:layout_width="match_parent"
                        android:layout_height="1dp"/>
                    <Button
                        android:layout_marginBottom="20dp"
                        android:layout_marginTop="25dp"
                        android:textStyle="bold"
                        android:textAllCaps="false"
                        android:textColor="#fff"
                        android:id="@+id/btnBooking"
                        android:background="@drawable/button_radius_blue"
                        android:textSize="14sp"
                        android:text="Booking Now"
                        android:layout_width="100dp"
                        android:layout_height="28dp" />

                </LinearLayout>




        </LinearLayout>

    </LinearLayout>

    <!--</android.support.v7.widget.CardView>-->

    </LinearLayout>

</android.support.v4.widget.NestedScrollView>

</FrameLayout>