<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/layoutBooking"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#fff"
    android:orientation="vertical">

    <android.support.v4.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fitsSystemWindows="true"
        app:layout_scrollFlags="scroll|exitUntilCollapsed">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:background="#df053f"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/title"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:text="Information For Booking"
                    android:textColor="#fff"
                    android:textSize="16sp"
                    android:textStyle="bold" />

            </LinearLayout>

            <!--<android.support.v7.widget.CardView-->
            <!--xmlns:card_view="http://schemas.android.com/apk/res-auto"-->
            <!--android:layout_marginLeft="3dp"-->
            <!--android:layout_marginRight="3dp"-->
            <!--android:layout_marginTop="10dp"-->
            <!--card_view:cardCornerRadius="5dp"-->
            <!--android:layout_width="match_parent"-->
            <!--android:layout_height="wrap_content">-->

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginBottom="20dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginTop="2dp"
                android:background="#bef0f9"
                android:orientation="horizontal"
                android:padding="3dp">


                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="15dp"
                    android:layout_weight="0.5"
                    android:gravity="center"
                    android:orientation="vertical"
                    android:paddingLeft="5dp">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/ic_create_black_24dp"
                        android:text="Name:"
                        android:textColor="#000"
                        android:textSize="14sp"
                        android:textStyle="normal" />

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="22dp"
                        android:src="@drawable/ic_phone_black_24dp"
                        android:text="Phone Number:"
                        android:textColor="#000"
                        android:textSize="14sp"
                        android:textStyle="normal" />


                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="22dp"
                        android:src="@drawable/ic_email_black_24dp"
                        android:text="Email:"
                        android:textColor="#000"
                        android:textSize="14sp"
                        android:textStyle="normal" />

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="15dp"
                        android:src="@drawable/ic_soccer"
                        android:text="Type Field:"
                        android:textColor="#000"
                        android:textSize="14sp"
                        android:textStyle="normal" />

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="12dp"
                        android:src="@drawable/ic_date_range_black_24dp"
                        android:text="Day Booking:"
                        android:textColor="#000"
                        android:textSize="14sp"
                        android:textStyle="normal" />

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="17dp"
                        android:src="@drawable/ic_access_time_black_24dp"
                        android:text="Time Booking:"
                        android:textColor="#000"
                        android:textSize="14sp"
                        android:textStyle="normal" />


                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="3dp"
                    android:layout_marginTop="10dp"
                    android:layout_weight="2"
                    android:orientation="vertical"
                    android:paddingRight="10dp">

                    <EditText
                        android:layout_width="match_parent"
                        android:layout_height="35dp"
                        android:layout_marginTop="-1dp"
                        android:focusable="true"
                        android:hint="Input your name"
                        android:singleLine="true"
                        android:textColor="#000"
                        android:textColorHint="#4b4b4b"
                        android:textSize="14sp"
                        android:textStyle="normal"
                        android:theme="@style/MyEditTextTheme" />

                    <EditText
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        android:hint="Enter your phone number"
                        android:singleLine="true"
                        android:textColor="#000"
                        android:textColorHint="#4b4b4b"
                        android:textSize="14sp"
                        android:textStyle="normal"
                        android:theme="@style/MyEditTextTheme" />

                    <EditText
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="3dp"
                        android:hint="Input your e-mail"
                        android:singleLine="true"
                        android:textColor="#000"
                        android:textColorHint="#4b4b4b"
                        android:textSize="14sp"
                        android:textStyle="normal"
                        android:theme="@style/MyEditTextTheme" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/txtfield"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="15dp"
                            android:hint="Type Field"
                            android:singleLine="true"
                            android:textColor="#000"
                            android:textColorHint="#42454b"
                            android:textSize="14sp"
                            android:textStyle="normal"
                            android:theme="@style/MyEditTextTheme" />

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="1dp"
                            android:layout_marginTop="3dp"
                            android:background="@color/textBtnReg" />
                    </LinearLayout>


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/txtday"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="22dp"
                            android:hint="Select Day"
                            android:singleLine="true"
                            android:textColor="#000"
                            android:textColorHint="#42454b"
                            android:textSize="14sp"
                            android:textStyle="normal"
                            android:theme="@style/MyEditTextTheme" />

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="1dp"
                            android:layout_marginTop="3dp"
                            android:background="@color/textBtnReg" />

                        <TextView
                            android:id="@+id/txttime"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="21dp"
                            android:hint="Select Time"
                            android:singleLine="true"
                            android:textColor="#000"
                            android:textColorHint="#42454b"
                            android:textSize="14sp"
                            android:textStyle="normal"
                            android:theme="@style/MyEditTextTheme" />

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="1dp"
                            android:layout_marginTop="3dp"
                            android:background="@color/textBtnReg" />

                        <Button
                            android:layout_gravity="center"
                            android:id="@+id/btnBooking"
                            android:layout_width="100dp"
                            android:layout_height="28dp"
                            android:layout_marginBottom="20dp"
                            android:layout_marginTop="25dp"
                            android:background="@drawable/button_radius_blue"
                            android:text="Booking Now"
                            android:textAllCaps="false"
                            android:textColor="#fff"
                            android:textSize="14sp"
                            android:textStyle="normal" />

                    </LinearLayout>


                </LinearLayout>

            </LinearLayout>

            <!--</android.support.v7.widget.CardView>-->

        </LinearLayout>

    </android.support.v4.widget.NestedScrollView>

</FrameLayout>