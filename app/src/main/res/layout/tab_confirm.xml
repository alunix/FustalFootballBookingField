<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="@drawable/bgblur"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <android.support.v4.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fitsSystemWindows="true"
        app:layout_scrollFlags="scroll|exitUntilCollapsed"
        >

    <LinearLayout
        android:layout_marginTop="0dp"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <!--<android.support.v7.widget.CardView-->
            <!--xmlns:card_view="http://schemas.android.com/apk/res-auto"-->
            <!--android:layout_marginLeft="5dp"-->
            <!--android:layout_marginRight="5dp"-->
            <!--android:layout_marginTop="5dp"-->
            <!--card_view:cardCornerRadius="5dp"-->
            <!--android:layout_width="match_parent"-->
            <!--android:layout_height="600dp">-->

            <LinearLayout
                android:paddingBottom="20dp"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="fill_parent">
                <LinearLayout
                    android:background="#52a9f5"
                    android:gravity="center"
                    android:layout_width="match_parent"
                    android:layout_height="45dp">

                <TextView
                    android:gravity="center"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:textColor="#000"
                    android:text="Information Booking"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" />
                </LinearLayout>
                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <LinearLayout
                        android:orientation="horizontal"
                        android:layout_marginTop="25dp"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent">

                        <LinearLayout
                            android:layout_marginLeft="20dp"
                            android:orientation="vertical"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content">
                            <TextView
                                android:textStyle="bold"
                                android:textSize="14sp"
                                android:textColor="#fff"
                                android:text="Name:"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content" />
                            <TextView
                                android:layout_marginTop="15dp"
                                android:textStyle="bold"
                                android:textSize="14sp"
                                android:textColor="#fff"
                                android:text="Phone Number:"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content" />
                            <TextView
                                android:layout_marginTop="15dp"
                                android:textStyle="bold"
                                android:textSize="14sp"
                                android:textColor="#fff"
                                android:text="Email:"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content" />
                            <TextView
                                android:layout_marginTop="15dp"
                                android:textStyle="bold"
                                android:textSize="14sp"
                                android:textColor="#fff"
                                android:text="Field Type:"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content" />
                            <TextView
                                android:layout_marginTop="15dp"
                                android:textStyle="bold"
                                android:textSize="14sp"
                                android:textColor="#fff"
                                android:text="Day Booking:"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content" />
                            <TextView
                                android:layout_marginTop="15dp"
                                android:textStyle="bold"
                                android:textSize="14sp"
                                android:textColor="#fff"
                                android:text="Time Booking:"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content" />

                        </LinearLayout>

                        <LinearLayout
                            android:layout_marginLeft="10dp"
                            android:orientation="vertical"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">

                            <TextView
                                android:id="@+id/txtname"
                                android:textStyle="bold"
                                android:textSize="14sp"
                                android:textColor="#fff"
                                android:text="Chanthuon"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content" />
                            <TextView
                                android:id="@+id/txtphone"
                                android:layout_marginTop="15dp"
                                android:textStyle="bold"
                                android:textSize="14sp"
                                android:textColor="#fff"
                                android:text="096 2008 259"                            android:layout_width="wrap_content"
                                android:layout_height="wrap_content" />
                            <TextView
                                android:id="@+id/txtemail"
                                android:layout_marginTop="15dp"
                                android:textStyle="bold"
                                android:textSize="14sp"
                                android:textColor="#fff"
                                android:text="chanthuonsreng@gmail.com"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content" />
                            <TextView
                                android:id="@+id/txtfield"
                                android:layout_marginTop="15dp"
                                android:textStyle="bold"
                                android:textSize="14sp"
                                android:textColor="#fff"
                                android:text="Small"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content" />
                            <TextView
                                android:id="@+id/txtday"
                                android:layout_marginTop="15dp"
                                android:textStyle="bold"
                                android:textSize="14sp"
                                android:textColor="#fff"
                                android:text="14/02/2015"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content" />
                            <TextView
                                android:id="@+id/txttime"
                                android:layout_marginTop="15dp"
                                android:textStyle="bold"
                                android:textSize="14sp"
                                android:textColor="#fff"
                                android:text="8 to 9 AM"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content" />

                        </LinearLayout>

                    </LinearLayout>

                    <Button
                        android:id="@+id/btnConfirm"
                        android:textColor="#fff"
                        android:textStyle="bold"
                        android:textSize="14sp"
                        android:background="@drawable/button_radius_blue"
                        android:layout_marginTop="25dp"
                        android:layout_gravity="center"
                        android:text="Confirm Now"
                        android:textAllCaps="false"
                        android:layout_width="100dp"
                        android:layout_height="28dp" />

                </LinearLayout>


            </LinearLayout>

            <!--</android.support.v7.widget.CardView>-->
    </LinearLayout>

    </android.support.v4.widget.NestedScrollView>
</FrameLayout>