    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <include android:id="@+id/tool_bar"
        layout="@layout/tool_bar">
    </include>
    <FrameLayout
        android:id="@+id/continer_framelayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    </FrameLayout>

</LinearLayout>

