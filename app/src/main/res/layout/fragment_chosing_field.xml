<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="@drawable/bgblur"
    android:id="@+id/layoutAllField"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <android.support.v4.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fitsSystemWindows="true"
        app:layout_scrollFlags="scroll|exitUntilCollapsed">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <LinearLayout
                android:background="#52a9f5"
                android:layout_width="match_parent"
                android:layout_height="45dp">
                <TextView
                    android:textColor="#fff"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:text="Choose Field For Booking"
                    android:gravity="center"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" />

            </LinearLayout>
            <LinearLayout
                android:orientation="horizontal"
                android:background="#90acff"
                android:layout_width="match_parent"
                android:layout_height="40dp">
                <TextView
                    android:layout_marginLeft="20dp"
                    android:textStyle="bold"
                    android:textColor="#fff"
                    android:textSize="16sp"
                    android:gravity="center"
                    android:text="Small Field"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent" />

            </LinearLayout>

            <LinearLayout
                android:background="#c7dcff"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="120dp">
                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="200dp"
                    android:layout_height="wrap_content">
                    <ImageView
                        android:layout_marginTop="20dp"
                        android:layout_marginLeft="20dp"
                        android:src="@drawable/img_field"
                        android:layout_width="120dp"
                        android:layout_height="80dp" />

                </LinearLayout>

                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">
                    <Button
                        android:id="@+id/btnSmall"
                        android:layout_marginRight="20dp"
                        android:textColor="#fff"
                        android:textStyle="bold"
                        android:textSize="14sp"
                        android:background="@drawable/button_radius_blue"
                        android:layout_marginTop="55dp"
                        android:layout_gravity="right"
                        android:text="Booking"
                        android:textAllCaps="false"
                        android:layout_width="85dp"
                        android:layout_height="30dp" />


                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:orientation="horizontal"
                android:background="#90acff"
                android:layout_width="match_parent"
                android:layout_height="40dp">
                <TextView
                    android:layout_marginLeft="20dp"
                    android:textStyle="bold"
                    android:textColor="#fff"
                    android:textSize="16sp"
                    android:gravity="center"
                    android:text="Medium Field"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent" />

            </LinearLayout>
            <LinearLayout
                android:background="#c7dcff"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="140dp">
                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                    <ImageView
                        android:layout_marginTop="20dp"
                        android:layout_marginLeft="20dp"
                        android:src="@drawable/img_field"
                        android:layout_width="130dp"
                        android:layout_height="95dp" />

                </LinearLayout>

                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">
                    <Button
                        android:id="@+id/btnMedium"
                        android:layout_marginRight="20dp"
                        android:textColor="#fff"
                        android:textStyle="bold"
                        android:textSize="14sp"
                        android:background="@drawable/button_radius_blue"
                        android:layout_marginTop="73dp"
                        android:layout_gravity="right"
                        android:text="Booking"
                        android:textAllCaps="false"
                        android:layout_width="85dp"
                        android:layout_height="30dp" />


                </LinearLayout>


            </LinearLayout>

            <LinearLayout
                android:orientation="horizontal"
                android:background="#90acff"
                android:layout_width="match_parent"
                android:layout_height="40dp">
                <TextView
                    android:layout_marginLeft="20dp"
                    android:textStyle="bold"
                    android:textColor="#fff"
                    android:textSize="16sp"
                    android:gravity="center"
                    android:text="Large Field"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent" />

            </LinearLayout>
            <LinearLayout
                android:background="#c7dcff"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="170dp">
                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                    <ImageView
                        android:layout_marginTop="20dp"
                        android:layout_marginLeft="20dp"
                        android:src="@drawable/img_field"
                        android:layout_width="160dp"
                        android:layout_height="100dp" />

                </LinearLayout>

                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">
                    <Button
                        android:id="@+id/btnLarge"
                        android:layout_marginRight="20dp"
                        android:textColor="#fff"
                        android:textStyle="bold"
                        android:textSize="14sp"
                        android:background="@drawable/button_radius_blue"
                        android:layout_marginTop="90dp"
                        android:layout_gravity="right"
                        android:text="Booking"
                        android:textAllCaps="false"
                        android:layout_width="85dp"
                        android:layout_height="30dp" />

                </LinearLayout>
            </LinearLayout>
        </LinearLayout>

    </android.support.v4.widget.NestedScrollView>
</FrameLayout>